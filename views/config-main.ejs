  <div class="main-content">
    <div class="page-header">
      <div style="display: flex; justify-content: space-between; align-items: center;">
        <div>
          <h1 class="page-title">Main Configuration</h1>
          <p class="page-description">Configure your server's advertisement and display settings</p>
        </div>
        <button class="theme-toggle" onclick="toggleTheme()">
          <svg class="sun-icon" width="24" height="24" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"/>
          </svg>
          <svg class="moon-icon" width="24" height="24" fill="currentColor" viewBox="0 0 20 20">
            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"/>
          </svg>
        </button>
      </div>
    </div>

    <div class="content-wrapper">
      <form action="/api/config/main/<%= serverId %>" method="POST">
        <div class="card">
          <div class="card-header">
            <h2 class="card-title">Advertisement Settings</h2>
          </div>
          
          <div class="form-group">
            <label class="form-label" for="adTitle">Advertisement Title</label>
            <input 
              type="text" 
              id="adTitle" 
              name="adTitle" 
              class="form-input" 
              placeholder="Your server's catchy title"
              value="<%= config.mainConfig?.adTitle || '' %>"
              maxlength="100"
            >
            <span class="form-help">A short, attention-grabbing title for your server (max 100 characters)</span>
          </div>

          <div class="form-group">
            <label class="form-label" for="adDescription">Advertisement Description</label>
            <textarea 
              id="adDescription" 
              name="adDescription" 
              class="form-textarea" 
              placeholder="Describe what makes your server unique and engaging..."
              rows="5"
            ><%= config.mainConfig?.adDescription || '' %></textarea>
            <span class="form-help">Detailed description of your server's features and community</span>
          </div>

          <div class="form-group">
            <label class="form-label" for="adInviteLink">Invite Link</label>
            <input 
              type="url" 
              id="adInviteLink" 
              name="adInviteLink" 
              class="form-input" 
              placeholder="https://discord.gg/..."
              value="<%= config.mainConfig?.adInviteLink || '' %>"
            >
            <span class="form-help">Your server's Discord invite link</span>
          </div>

          <div class="form-group">
            <label class="form-label" for="adOtherLinks">Additional Links</label>
            <textarea 
              id="adOtherLinks" 
              name="adOtherLinks" 
              class="form-textarea" 
              placeholder="Website: https://example.com&#10;Twitter: https://twitter.com/..."
              rows="4"
            ><%= config.mainConfig?.adOtherLinks || '' %></textarea>
            <span class="form-help">Other relevant links (website, social media, etc.) - one per line</span>
          </div>

          <div class="form-group">
            <label class="form-label" for="adBanner">Banner Image URL</label>
            <input 
              type="url" 
              id="adBanner" 
              name="adBanner" 
              class="form-input" 
              placeholder="https://example.com/banner.png"
              value="<%= config.mainConfig?.adBanner || '' %>"
            >
            <span class="form-help">URL to your server's banner image (recommended: 1920x1080px)</span>
          </div>

          <% if (config.mainConfig?.adBanner) { %>
            <div class="form-group">
              <label class="form-label">Banner Preview</label>
              <div style="max-width: 600px; border-radius: 12px; overflow: hidden; border: 2px solid var(--border);">
                <img src="<%= config.mainConfig.adBanner %>" alt="Banner Preview" style="width: 100%; height: auto; display: block;">
              </div>
            </div>
          <% } %>

          <div style="display: flex; gap: 1rem; justify-content: flex-end; margin-top: 2rem;">
            <a href="/dashboard/<%= serverId %>" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-success">
              <svg width="20" height="20" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              Save Changes
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>


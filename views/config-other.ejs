              <option value="Music" <%= config.otherConfig?.category === 'Music' ? 'selected' : '' %>>ðŸŽµ Music</option>
              <option value="Art" <%= config.otherConfig?.category === 'Art' ? 'selected' : '' %>>ðŸŽ¨ Art & Design</option>
              <option value="Entertainment" <%= config.otherConfig?.category === 'Entertainment' ? 'selected' : '' %>>ðŸŽ¬ Entertainment</option>
